<div class="main">
  <h2><span>ユーザ検索</span></h2>
  <div class="user_search">
  <%= render "public/users/search_user" %>
  </div>
  <div class="user_index_box">
    <% if @users == nil %>
      <p>検索結果がありません</p>
      <% else %>
      <% @users.each do |user| %>
      <div class="user-sec01">
        <div class="user-item">
        <%= link_to user_path(user) do %>
          <%= image_tag user.get_profile_image(100, 100), style: "border-radius: 50%;" %>
        </div>
        <div class="user-name-item">
          <%= user.name %>
        <% end %>
        </div>
        <div class="user-item">
          <% if current_user.name != "guestuser" && current_user.id != user.id %>
            <%= render "public/relationships/relationships_btn", user: user %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  <% unless @users == nil %>
  <div class="kaminari">
      <%= paginate @users %>
  </div>
  <% end %>
</div>