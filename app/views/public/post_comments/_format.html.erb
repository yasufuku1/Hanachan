<%= form_with model: [post, post_comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
  <div id="post_comment-error_messages">
    <%= render "public/shared/post_comment_error_message", resource: post_comment %>
  </div>
  <%= f.submit "送信する" %>
<% end %>