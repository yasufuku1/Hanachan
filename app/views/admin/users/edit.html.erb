<div class="container">
  <h2><span>ユーザプロフィール編集</span></h2>

  <div class="box">
  <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '名前' %>
      <%= render "public/shared/name_error_message", resource: @user %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
      <%= render "public/shared/email_error_message", resource: @user %>
    </div>

    <div class="field">
      <%= f.label :introduction %>
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", placeholder: "introduction" %>
    </div>

    <div class="field">
      <%= f.label :is_active %>
      <%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %>
      <%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", class: "text-invalid" %>
    </div>
    <div class="button-box">
      <%= f.submit "変更を保存する" %>
    <% end %>
    </div>
  </div>
</div>